<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:showDividers="middle"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#36ab60"
        android:gravity="center"
        android:text="消息"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <RelativeLayout
        android:id="@+id/RelativeLayout001"
        android:layout_below="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="53dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/mine" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView3"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@+id/imageView3"
            android:text="lily"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignStart="@+id/textView2"
            android:text="Hello,nice to meet you!"
            android:textSize="20dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/RelativeLayout001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="53dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="17dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/mine" />
    </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"

            android:drawableTop="@drawable/tab_menu_home"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/tab_menu_home_text" />

        <TextView
            android:id="@+id/txt_post"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"

            android:drawableTop="@drawable/tab_menu_post"
            android:gravity="center"
            android:text="发布"
            android:textColor="@drawable/tab_menu_post_text" />


        <TextView
            android:id="@+id/txt_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"

            android:drawableTop="@drawable/tab_menu_dialog"
            android:gravity="center"
            android:text="消息"
            android:textColor="@drawable/tab_menu_dialog_text" />

        <TextView
            android:id="@+id/txt_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"

            android:drawableTop="@drawable/tab_menu_user"
            android:gravity="center"
            android:text="用户"
            android:textColor="@drawable/tab_menu_user_text" />
    </LinearLayout>

</RelativeLayout>
